html
	head
		title Pizarra digital interactiva
		
		link(rel="stylesheet", type="text/css", href="stylesheets/style_h_nuevo.css", media="screen and (max-width: 1024px), (max-width: 1280px)")
		link(rel="stylesheet", type="text/css", href="stylesheets/style_v.css", media="screen and (max-width: 768px), (max-width: 800px)")

		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0,  minimum-scale=1.0, user-scalable=no")
